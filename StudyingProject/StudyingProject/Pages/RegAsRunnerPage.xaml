<Page x:Class="StudyingProject.Pages.RegAsRunnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyingProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegAsRunnerPage">

    <Grid Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">
                <Button Style="{StaticResource RoundedButtonStyle}" Margin="0,0,0,0" Width="420" Height="55">
                    <Label Style="{StaticResource OpenSans-Light}" FontSize="24" Foreground="#505050" FontStyle="Italic">
                        Я участвовал ранее
                    </Label>
                </Button>
                <Button Style="{StaticResource RoundedButtonStyle}" Margin="0,15,0,0" Width="420" Height="55">
                    <Label Style="{StaticResource OpenSans-Light}" FontSize="24" Foreground="#505050" FontStyle="Italic">
                        Я новый участник
                    </Label>
                </Button>
            </WrapPanel>
        </WrapPanel>
        <Button Grid.Row="2" Style="{StaticResource RoundedButtonStyle}" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,15,15" Width="90" Height="30" Foreground="#505050">Login</Button>
    </Grid>
</Page>
