<Page x:Class="StudyingProject.Pages.PayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyingProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PayPage">

    <Grid Background="White">
        <WrapPanel Margin="0,50" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <WrapPanel.Resources>
                <Style TargetType="Label" BasedOn="{StaticResource OpenSans-Light}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="Foreground" Value="#505050"/>
                    <Setter Property="Margin" Value="0,0,0,-10"/>
                    <Setter Property="FontSize" Value="20"/>
                </Style>
            </WrapPanel.Resources>
            <Label HorizontalAlignment="Center" Foreground="#505050" FontSize="20" Margin="0,0,0,15">Спасибо за вашу спонсорскую поддержку!</Label>
            <Label FontSize="16">Спасибо за поддержку бегуна за Marathon Skills 2016!</Label>
            <Label FontSize="16">Ваше пожертвование пойдет в его благотворительную организацию.</Label>
            <Label Margin="0,40,0,0" Foreground="#505050">Иван Прудов(204) из Russia</Label>
            <Label>Фонд Кошек</Label>
            <Label FontSize="50">$0</Label>
            <Button Margin="0,15" Style="{StaticResource RoundedButtonStyle}" Width="60" Height="20">Назад</Button>
        </WrapPanel>
    </Grid>
</Page>
